#include <stdio.h>
#include <string.h>

int main() {

    char palavra1 [10];
    char palavra2 [strlen(palavra1)];
    int igual = 1;

    printf("Informe uma palavra: ");
    scanf("%s", palavra1);

    for (int i = 0; i < strlen(palavra1); i++){    
        palavra2[i] = palavra1[i];    
    }

    printf(palavra2);

    return 0;
}
